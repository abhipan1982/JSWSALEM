@using PE.HMIWWW.Core.Resources;
@model PE.HMIWWW.Areas.AlarmManagement.ViewModels.VM_AlarmCreator
@{
  Layout = "~/Views/Shared/_PopupLayout.cshtml";
  // PAGE_TITLE_AlarmCreator_AlarmDefinitionGeneratePopup
}


<div class="container-fluid p-3">
  <form asp-controller="AlarmCreator" asp-action="GenerateAlarmDefinition" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="displayGeneratedDefinitions" data-ajax-failure="OnFormError"
      class="form-horizontal" target="formContainer" role="form" id="form">
      <div>
        <div class="row justify-content-end">
            <div class="col-6 align-self-end">
                <div class="form-group mt-4">
                    <span>
                    @Html.RadioButton("Type", "true") @VM_Resources.NAME_Standard
                    @Html.RadioButton("Type", "false") @VM_Resources.NAME_ProjectSpecific
                    </span>
                    <input type="submit" class="btn btn-default btn-primary popup_button" value="@VM_Resources.BUTTON_generate"/>
                </div>
            </div>
        </div>
    </div>
  </form>

  <div class="row">
    <div class="col-12 p-2">
      
    <div class="form-group">
      <textarea id="definitions" class="form-control text-monospace"
          rows="20" cols="170">
      </textarea>
    </div>
    </div>
  </div>

</div>
