@using PE.HMIWWW.Core.Resources;
@using PE.HMIWWW.Areas.AlarmManagement.ViewModels;
@model long?

<div class="container-fluid p-3">
    <div class="row">
        <div class="pb-2 px-3" style="width: 93.8%">
            @(Html.Kendo().Grid<VM_AlarmMessage>()
                .Name("AlarmMessageGrid")
                .NoRecords(n => n.Template(VM_Resources.GLOB_GRID_NO_DATA))
                .Columns(columns =>
                {
                    columns.Bound(c => c.AlarmMessageId).Visible(false);
                    columns.Bound(c => c.LanguageCode).HtmlAttributes(new { @class = "nowrap" }).Width(150);
                    columns.Bound(c => c.MessageText).HtmlAttributes(new { @class = "nowrap" });
                })
                .DataSource(d => d
                  .Ajax()
                  .ServerOperation(true)
                  .PageSize(3)
                  .Read(r => r.Action("GetAlarmMessagesSearchGridData", "AlarmCreator", new { Area = "AlarmManagement", alarmDefinitionId = Model })))
            )
        </div>
    </div>

    <div class="row">
        <div class="pb-2 px-3" style="width: 93.8%">
            @(Html.Kendo().Grid<VM_AlarmParameter>()
                .Name("AlarmParametersGrid")
                .NoRecords(n => n.Template(VM_Resources.GLOB_GRID_NO_DATA))
                .Columns(columns =>
                {
                    columns.Bound(c => c.AlarmDefinitionParamId).Visible(false);
                    columns.Bound(c => c.ParamKey).HtmlAttributes(new { @class = "nowrap" });
                    columns.Bound(c => c.ParamName).HtmlAttributes(new { @class = "nowrap" });
                })
                .DataSource(d => d
                  .Ajax()
                  .ServerOperation(true)
                  .PageSize(3)
                  .Read(r => r.Action("GetAlarmParametersSearchGridData", "AlarmCreator", new { Area = "AlarmManagement", alarmDefinitionId = Model })))
            )
        </div>
    </div>
</div>
