@using PE.HMIWWW.Core.HtmlHelpers
@using PE.HMIWWW.Core.Resources
@model PE.HMIWWW.Areas.MillConfigurator.ViewModels.TrackingInstruction.VM_TrackingInstruction
@{
  Layout = "~/Views/Shared/_LayoutWithoutWidgets.cshtml";
}

@section module_menu
  {
  @Html.ImageButton("add", "createTrackingInstruction()", false, "NAME_CreateTrackingInstruction")
  @Html.ImageButton("add_feature", "createBasicTrackingInstructions()", false, "NAME_CreateBasicTrackingInstruction")
}

  <div class="container-fluid p-3">
    <div class="row">
      <div class="col-3 grid-filter" id="TrackingInstructionSearchGrid">
        @await Html.PartialAsync("~/Areas/MillConfigurator/Views/TrackingInstruction/_TrackingInstructionSearchGrid.cshtml", Model)
      </div>
      <div class="col-9 element-details" id="TrackingInstructionDetails">
        <div class="row justify-content-center plug">
          <div class="col-6 align-self-center">
            <img src="~/css/Shared/plug.png" />
            <p class="mt-5 plug-info">@VM_Resources.INFO_SelectPlugInfo</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <link rel="stylesheet" href="~/bundles/css/Module/MillConfigurator.css" />
  <script src="~/bundles/js/Module/TrackingInstruction.js"></script>
