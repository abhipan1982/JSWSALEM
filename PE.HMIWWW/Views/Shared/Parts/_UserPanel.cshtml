<style>
  .date-time-panel {
      z-index: 20;
      background-position-x: 0px;
      background-position-y: 4px;
      background-repeat: no-repeat;
      background-image: url('/css/system/img/clock.png');
      padding-left: 35px;
      color: #8d8292;
  }

  #user-panel > img {
      float: left;
      padding-right: 4px;
  }

  #user-panel > div {
      padding: 0px;
      float: left;
      vertical-align: top;
      margin: 0px;
      border-right: 1px solid #b1b8be;
      height: 30px;
      padding-right: 9px;
  }

  a.user-panel-details {
      font-size: 12pt;
      color: #000000;
      padding: 0px;
      margin: 0px;
      border: 0px;
      position: relative;
      top: -2px;
      text-decoration: none;
  }

  a.user-panel-change {
      font-size: 10pt;
      color: #879baa;
      padding: 0px;
      margin: 0px;
      position: relative;
      top: -9px;
      text-decoration: none;
  }

  a.user-panel-details:hover {
      color: #879baa;
  }

  a.user-panel-change:hover {
      color: #000000;
  }

  a.user-panel-logout {
      font-size: 10pt;
      color: #fff;
      padding-left: 8px;
      padding-right: 8px;
      padding-top: 2px;
      padding-bottom: 2px;
      margin-left: 10px;
      position: relative;
      top: 3px;
      background-color: #879baa;
      text-decoration: none;
  }

      a.user-panel-logout:hover {
          background-color: #e4eaef;
      }

  .user-panel-details-primetals {
      color: #ce0037;
      font-size: 12pt;
      top: 3px;
      position: relative;
  }

  .user-panel-details-admin {
      color: #f2a900;
      font-size: 12pt;
      top: 3px;
      position: relative;
  }

  .user-panel-details-noadmin {
      color: #7a9a01;
      font-size: 12pt;
      top: 3px;
      position: relative;
  }
</style>


@{
  var user = "";
  var login = "";
  var job = "";
  var id = "";
  var language = "";
  var elevatedPrivilages = false;
  var admin = false;

  if (ViewBag.User_IsAuthenticated != null && ViewBag.User_IsAuthenticated)
  {
    login = ViewBag.User_Name;
    job = "sss";
    id = ViewBag.User_Id;
    language = ViewBag.User_LanguageCode;
    //user = String.Format("{0}: {1}/{2}", job, login, language);
    user = string.Format("{0}", login);
    elevatedPrivilages = ViewBag.User_IsSuperuser;
    admin = ViewBag.User_IsAdmin;
  }
}


<div id="user-panel">
  <div style="float: left; padding-left:4px; margin-right:10px; font-size: 14px; position:relative;">
    <div class="date-time-panel" style="position: relative; top:-4px;">
      <div id="date"></div>
      <div id="time"></div>
    </div>

    <script type="text/javascript">
      let dateElement = document.getElementById('date');
      let timeElement = document.getElementById('time');
      function updateClock() {
          var now = new Date();
          dateElement.innerHTML = now.toLocaleDateString();
          timeElement.innerHTML = now.toLocaleTimeString();
          setTimeout(updateClock, 1000);
      }
      updateClock();

    </script>
  </div>


  @if (elevatedPrivilages)
  {
    <img src="~/css/System/img/head_sp.png" />
  }
  else if (admin)
  {
    <img src="~/css/System/img/head_admin.png" />
  }
  else
  {
    <img src="~/css/System/img/head.png" />
  }

  @if (ViewBag.User_IsAuthenticated != null && ViewBag.User_IsAuthenticated)
  {
    <div>
      @if (elevatedPrivilages)
      {
        <a href="javascript:OpenInPopupWindow({controller:'Account',method:'Details',data:{id: '@id'}})" class="user-panel-change">
          <div class="user-panel-details-primetals">@user</div>
        </a>
      }
      else if (admin)
      {
        <a href="javascript:OpenInPopupWindow({controller:'Account',method:'Details',data:{id: '@id'}})" class="user-panel-change">
          <div class="user-panel-details-admin">@user</div>
        </a>
      }
      else
      {
        <a href="javascript:OpenInPopupWindow({controller:'Account',method:'Details',data:{id: '@id'}})" class="user-panel-change">
          <div class="user-panel-details-noadmin">@user</div>
        </a>
      }
      <div style="clear: both;"></div>

      <a href="javascript:OpenInPopupWindow({controller:'Account',method:'ChangePasswordDialog'})" class="user-panel-change">@VM_Resources.GLOB_ChangePassword</a>


    </div>
  }

</div>
