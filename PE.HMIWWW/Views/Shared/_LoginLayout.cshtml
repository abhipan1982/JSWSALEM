<!DOCTYPE html>
<html style="background-color:#fff;">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name='date' content='@PE.HMIWWW.Core.Parameter.ApplicationInformation.CompileDate.ToString("s")'>
    <title>ProcessExpert - @ViewBag.Page_Title</title>
    <link rel="stylesheet" href="~/bundles/css/telerikcss.css"/>
    <link rel="stylesheet" href="~/bundles/css/css.css"/>

    <script src="~/bundles/jquery.js"></script>
    <script src="~/bundles/bootstrap.js"></script>
    <script src="~/bundles/telerikjs.js"></script>
    <script src="~/bundles/service.js"></script>


    @*<script src="~/signalr/hubs"></script>*@


    @{
        await Html.RenderPartialAsync("~/Views/Shared/parts/_JsTranslations.cshtml");
    }

    @*@{Html.RenderPartial("~/Views/Shared/_LayoutIncludes.cshtml"); }*@

    @RenderSection("scripts", false)
    @RenderSection("ModuleIncludes", false)

    <style>
    .center {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 500px;
      height: 420px;
      background: rgb(214,223,231);
      padding: 15px;
    }

    .inputFont {
      font-size: 21px;
      border-radius: 3px;
      padding: 12px;
      padding-top: 6px;
      padding-bottom: 6px;
      margin-left: 10%;
      width: 80%;
      max-width: 100%;
      height: 42px;
    }

    .btn-login {
      font-size: 30px;
      width: 250px;
      background-color: #f2a900;
      color: white;
      border: hidden;
    }

    body {
      padding: 0px;
      margin: 0px;
      border: 0px;
      overflow-y: hidden;
    }

    .back {
      background: url("../../css/System/Img/loginBackground.jpg");
      height: 1000px;
    }

    .form-group {
      margin-bottom: 30px;
    }

    .field-validation-error {
      position: absolute;
      left: 0;
      right: 0;
      margin-left: auto;
      margin-right: auto;
      width: 400px;
    }
  </style>

</head>
<body>
@{ await Html.RenderPartialAsync("~/Views/Shared/Notification/_Notification.cshtml"); }

<header class="main">
    @{ await Html.RenderPartialAsync("~/Views/Shared/parts/_Logotypes.cshtml"); }
</header>
<div class="back">
    @RenderBody()
</div>
</body>
</html>
