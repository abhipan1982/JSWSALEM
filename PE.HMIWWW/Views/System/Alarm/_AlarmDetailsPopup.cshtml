@model PE.HMIWWW.ViewModel.System.VM_AlarmItem

<div class="row">

  <div class="col-4 p-0 pt-3">
    <div class="container-fluid">

      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.AlarmDate)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.AlarmDate)
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.ToConfirm)
        </div>
        <div class="col">
          @Html.CheckBoxFor(m => m.ToConfirm, new { disabled = "disabled" })
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.Message)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.Message)
        </div>
      </div>

    </div>
  </div>

  <div class="col-4 p-0 pt-3">
    <div class="container-fluid">

      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.AlarmOwner)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.AlarmOwner)
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.ConfirmedBy)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.ConfirmedBy)
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.Confirmation)
        </div>
        <div class="col">
          @Html.CheckBoxFor(m => m.Confirmation, new { disabled = "disabled" })
        </div>
      </div>

    </div>
  </div>

  <div class="col-4 p-0 pt-3">
    <div class="container-fluid">

      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.AlarmTypeName)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.AlarmTypeName)
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.ConfirmationDate)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.ConfirmationDate)
        </div>
      </div>

    </div>
  </div>

</div>
