@using PE.HMIWWW.ViewModel.Module.Lite.Shift
@model PE.HMIWWW.ViewModel.Module.Lite.Shift.VM_ShiftGenerate

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}
            <div class="row">
              <div class="form-group col-6">
                    @Html.LabelFor(m => m.From, new { @class = "control-label" })
                    @Html.Kendo().DatePickerFor(x => x.From).Format(PE.HMIWWW.Core.Resources.VM_Resources.GLOB_ShortDate_FORMAT_Picker).HtmlAttributes(new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(m => m.From, "", new { @class = "text-danger" })
              </div>

              <div class="form-group col-6">
                    @Html.LabelFor(m => m.To, new { @class = "control-label" })
                    @Html.Kendo().DatePickerFor(x => x.To).Format(PE.HMIWWW.Core.Resources.VM_Resources.GLOB_ShortDate_FORMAT_Picker).HtmlAttributes(new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(m => m.To, "", new { @class = "text-danger" })
              </div>
            </div>

    <div id="date_error" class="k-form-error p-0 m-0"> </div>

    <hr />   

    <div id="shiftDayFormArr">
    </div>

<script>

$(document).ready(() =>{
  initShiftForm();
})

$("#From").change(function () {
  handleDateChange();
});

$("#To").change(function () {
  handleDateChange();
});

</script>
