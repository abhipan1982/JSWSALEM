        @Html.LabelFor(m => m.SeqNum, new { @class = "control-label" })
        @Html.EditorFor(m => m.SeqNum, new { htmlAttributes = new { @class = "form-control popup-input" } })
        @Html.ValidationMessageFor(m => m.SeqNum, "", new { @class = "text-danger" })
    </div>*@
