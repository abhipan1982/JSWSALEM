@model PE.HMIWWW.ViewModel.System.VM_WidgetConfigurations
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

@if (Model != null && !ViewData.ModelState.IsValid)
{
    <script>
        $(document).ready(function () {
            $("#popup-footer").css('background', '#ce0037').css('color', '#fff');
        })
    </script>
}

<form asp-controller="WidgetConfiguration" asp-action="InsertWidgetConfiguration" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="form-horizontal" target="formContainer" role="form" id="form">

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.WidgetConfigurationId)


    <div class="form-group">
        @Html.LabelFor(m => m.WidgetName, new {@class = "control-label"})
        @Html.EditorFor(m => m.WidgetName, new {htmlAttributes = new {@class = "form-control popup-input"}})
        @Html.ValidationMessageFor(m => m.WidgetName, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.WidgetFileName, new {@class = "control-label"})
        @Html.EditorFor(m => m.WidgetFileName, new {htmlAttributes = new {@class = "form-control popup-input"}})
        @Html.ValidationMessageFor(m => m.WidgetFileName, "", new {@class = "text-danger"})
    </div>
