@{
  Layout = "~/Views/Shared/_LayoutWithoutWidgets.cshtml";
}

<link rel="stylesheet" href="~/bundles/css/Module/MeasurementAnalysisComparison.css" />


<div class="row">
  <div class="col-2">
@*    <div class="form-group mt-2 comparison">
      <label>Comparison</label>
      <input class="select_comp" id="select_comp"/>
    </div>*@

    <div class="measurements">
      <div class="measurements_header">
        Features <span class="details_header_icon details-icon cursor-pointer" id="measurements_details" onclick="OpenFeatureGridPopup()"></span>
      </div>
      <div class="measurements_data" id="selected_features">
      </div>
    </div>

     <div class="measurements">
      <div class="measurements_header">
        Materials 
@*         <span class="details_header_icon add-list-icon details-icon cursor-pointer" onclick="OpenWOGridPopup()" style="right: 40px"></span>*@
         <span class="details_header_icon details-icon cursor-pointer" onclick="OpenMaterialGridPopup()"></span>
      </div>
      <div class="measurements_data" id="selected_materials">
      </div>
    </div>

  </div>
  <div class="col-10">
      <div class="options-bar">
        <div class="options">
        <div class="form-group mt-2">
          <label>Feature Type</label>
          <input class="ml-1" id="select_type"/>
        </div>
        <div class="form-group mt-2 ml-5">
          <label>Date/Time Normalization</label>
          <input type="checkbox" id="checkbox_norm" />
        </div>
        </div>
        <div class="mr-2 mt-3" id="chart_legend" title="Show/Hide Legend"></div>
      </div>
      <div style="position: relative">
          <div class="chart" id="chartdiv"></div>
          <div class="chart" id="legenddiv"></div>
      </div>

@*       <div id="chart-nodata" class="msg-container"></div>*@
  </div>
</div>

<script src="~/bundles/js/Module/MeasurementAnalysisComparison.js"></script>
