@model IEnumerable<PE.HMIWWW.ViewModel.Module.Lite.Measurements.VM_RawMaterialInArea>
@using PE.HMIWWW.Core.Helpers;
  
@(Html.Kendo().TabStrip()
        .Name("FeaturesList")
        .Animation(false)
        .HtmlAttributes(new { style = "width: 100%;" })
        .Scrollable(false)
        .Items(tabstrip =>
        {
          var TabItemIndex = 0;
          foreach (var TabItem in Model)
          {
            if (TabItemIndex == 0)
            {
              tabstrip.Add().Text(TrackingAreaHelpers.TrackingAreas.Where(x => x.TrackingAreaCode == TabItem.AreaCode).Single().TrackingAreaTitle).Selected(true).LoadContentFrom("GetFeaturesGridView", "MeasurementAnalysis", TabItem);
            }
            else
            {
              tabstrip.Add().Text(TrackingAreaHelpers.TrackingAreas.Where(x => x.TrackingAreaCode == TabItem.AreaCode).Single().TrackingAreaTitle).Selected(false).LoadContentFrom("GetFeaturesGridView", "MeasurementAnalysis", TabItem);
            }
            TabItemIndex++;
          }
        })
    )
