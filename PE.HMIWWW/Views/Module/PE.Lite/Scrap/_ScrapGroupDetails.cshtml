@model PE.HMIWWW.ViewModel.Module.Lite.ScrapGroup.VM_ScrapGroup
<style>
    .line {
        margin: 0 auto;
        width: 95%;
        height: 1px;
        background-color: rgba(0, 100, 135, 0.7);
    }
</style>

<div class="row h-100 p-0 pt-3">
    <div class="col-4 p-0">
        <div class="container-fluid">
            <div class="form-group row">
                <div class="col-5 text-right">
                    @Html.LabelFor(x => x.ScrapGroupName)
                </div>
                <div class="col-3 text-left">
                    @Html.DisplayFor(m => m.ScrapGroupName)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 text-right">
                    @Html.LabelFor(x => x.ScrapGroupCode)
                </div>
                <div class="col-3 text-left">
                    @Html.DisplayFor(m => m.ScrapGroupCode)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 text-right">
                    @Html.LabelFor(m => m.ScrapGroupDescription)
                </div>
                <div class="col-4 text-left">
                    @Html.DisplayFor(m => m.ScrapGroupDescription)
                </div>
            </div>
        </div>
    </div>
</div>