@model PE.HMIWWW.ViewModel.Module.Lite.ScrapGroup.VM_ScrapGroup
@{
    /**/

    ViewBag.Title = "_ScrapGroupEditPopup";
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<style>
    .textboxWidth {
        width: 100px;
    }

    .text-style {
        color: #00587c;
        font-weight: 500;
        font-size: 14px;
    }

    .container {
        padding: 0;
    }

    .form-group label {
        color: #00587c;
        font-size: 13px;
        margin-top: 2px;
    }

    .scrap-group {
        border-bottom: 1px solid #e6e6e6;
        padding-bottom: 5px;
        padding-right: 5px;
        /*width: 400px;*/
    }

    .scrap-group-name {
        font-size: 15px;
        font-weight: 500;
        color: #006487;
    }

    .scrap-group-code {
        font-size: 13px;
        line-height: 18px;
        color: #666;
    }

    .details-row {
        display: flex;
        flex-direction: row;
        margin: 0;
    }
</style>
<form asp-controller="ScrapGroupCatalogue" asp-action="UpdateScrapGroup" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="container-fluid" target="formContainer" role="form" id="form">
    @Html.AntiForgeryToken()
    <div style="height:auto;overflow-x:hidden">
        <div class="row form-group">
            @Html.HiddenFor(x => x.ScrapGroupId)
            <div class="col text-right pr-0">
                <label>@Html.LabelFor(x => x.ScrapGroupCode)</label>
            </div>
            <div class="col">
                @Html.Kendo().TextBoxFor(x => x.ScrapGroupCode).HtmlAttributes(new {@class = "form-control form-control-sm", onchange = "checkScrapGroupCodeValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + "," + "\"" + Model.ScrapGroupCode + "\"" + ");"})
                @Html.ValidationMessageFor(x => x.ScrapGroupCode)
            </div>

            <div class="col text-right pr-0">
                <label>@Html.LabelFor(x => x.ScrapGroupName)</label>
            </div>
            <div class="col">
                @Html.Kendo().TextBoxFor(x => x.ScrapGroupName).HtmlAttributes(new {@class = "form-control form-control-sm", onchange = "checkScrapGroupNameValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + "," + "\"" + Model.ScrapGroupName + "\"" + ");"})
                @Html.ValidationMessageFor(x => x.ScrapGroupName)
            </div>

            <div class="col text-right pr-0">
                <label>@Html.LabelFor(x => x.ScrapGroupDescription)</label>
            </div>
            <div class="col">
                @Html.Kendo().TextBoxFor(x => x.ScrapGroupDescription).HtmlAttributes(new {@class = "form-control form-control-sm"})
            </div>
        </div>
    </div>
    <hr>


    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
                @VM_Resources.GLOB_Form_Button_Update
            </button>
        </div>
    </div>

    <script>

        $(function () {

            $('#error').css("display", "none");
            $("#form").kendoValidator().data("kendoValidator");

        });

        function displayMessage() {

            var validator = $("#form").kendoValidator().data("kendoValidator");

            if (validator.validate()) {
                $('#error').css("display", "none");
            } else {
                $('#error').css("display", "block");
                $('#popup-footer')
                    .css('display', 'block')
                    .css('background-color', 'rgb(206, 0, 55)');
            }
        }
    </script>
</form>