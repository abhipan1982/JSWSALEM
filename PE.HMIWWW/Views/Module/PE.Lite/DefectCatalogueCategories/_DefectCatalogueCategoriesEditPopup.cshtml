@model PE.HMIWWW.ViewModel.Module.Lite.Defect.VM_DefectCatalogueCategory
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<form asp-controller="DefectCatalogueCategories" asp-action="UpdateDefectCatalogueCategories" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="container-fluid" target="formContainer" role="form" id="form">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.DefectCatalogueCategoryCode)</label>
        </div>
        <div class="col">
            @Html.Kendo().TextBoxFor(x => x.DefectCatalogueCategoryCode).HtmlAttributes(new {@class = "form-control form-control-sm", @onchange = "checkDefectCategoryCodeValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + ");"})
            @Html.ValidationMessageFor(x => x.DefectCatalogueCategoryCode)
        </div>
    </div>

    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.DefectCatalogueCategoryName)</label>
        </div>
        <div class="col">
            @Html.Kendo().TextBoxFor(x => x.DefectCatalogueCategoryName).HtmlAttributes(new {@class = "form-control form-control-sm", @onchange = "checkDefectCategoryNameValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + ");"})
            @Html.ValidationMessageFor(x => x.DefectCatalogueCategoryName)
        </div>
    </div>

    <div class="row form-group">

        <div class="col text-right">
            <label>@Html.LabelFor(x => x.DefectCategoryGroupId)</label>
        </div>
        <div class="col">
            @(Html.Kendo().DropDownListFor(x => x.DefectCategoryGroupId)
                .DataTextField("DefectGroupCode")
                .DataValueField("DefectGroupId")
                .HtmlAttributes(new {@class = "form-control form-control-sm"})
                .OptionLabel("-")
                .DataSource(source =>
                {
                    source.Read(read => { read.Action("ServerFiltering_GetDefectGroups", "DefectCatalogueCategories"); })
                        .ServerFiltering(true);
                })
                )
        </div>
    </div>

    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.DefectCatalogueCategoryDescription)</label>
        </div>
        <div class="col">
            @Html.Kendo().TextBoxFor(x => x.DefectCatalogueCategoryDescription).HtmlAttributes(new {@class = "form-control form-control-sm"})
            @Html.ValidationMessageFor(x => x.DefectCatalogueCategoryDescription)
        </div>
    </div>


    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.EnumAssignmentTypeId)</label>
        </div>
        <div class="col">
            @(Html.Kendo().DropDownListFor(x => x.EnumAssignmentTypeId).BindTo((SelectList) ViewBag.EnumAssignmentType).HtmlAttributes(new {@class = "form-control form-control-sm"}))
            @Html.ValidationMessageFor(m => m.EnumAssignmentTypeId)
        </div>
    </div>

    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.IsDefault)</label>
        </div>
        <div class="col">
            @Html.Kendo().CheckBoxFor(x => x.IsDefault).HtmlAttributes(new {@class = "form-control"}).Label(String.Empty)
        </div>
    </div>


    <div class="row form-group">

        <div class="col text-right">
        </div>
        <div class="col">
        </div>
    </div>

    <hr/>

    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" type="submit" onclick="displayMessage()">
                @VM_Resources.GLOB_Form_Button_Update
            </button>
        </div>
    </div>
</form>

<script>
    $(function () {

        $("#form").kendoValidator().data("kendoValidator");

    });

    function displayMessage() {

        var validator = $("#form").kendoValidator().data("kendoValidator");

        if (validator.validate()) {
            $('#error').css("display", "none");
        } else {
            $('#error').css("display", "block");
            $('#popup-footer')
                .css('display', 'block')
                .css('background-color', 'rgb(206, 0, 55)');
        }
    }
</script>