<div class="grid-title"><span class="grid-title-icon k-icon k-i-arrow-45-down-right"></span>@VM_Resources.NAME_Reception</div>
@(
    Html.Kendo()
        .Grid<PE.HMIWWW.ViewModel.Module.Lite.BilletYard.VM_HeatsOnYards>()
        .Name("RecepcionSearchGrid")
        .NoRecords(x => x.Template(VM_Resources.GLOB_GRID_NO_DATA))
        .Pageable(p => p
                .Messages(m => m.Display(VM_Resources.GLOB_pagination)))
        .Sortable()
        .Filterable()
        .Selectable()
        .HtmlAttributes(new { style = "height: 660px; cursor: pointer" })
        .Columns(c =>
        {
          c.Bound(x => x.HeatName);
          c.Bound(x => x.SteelgradeName);
          c.Bound(x => x.HeatId).Visible(false);
          c.Bound(x => x.YardId).Visible(false);
          c.Bound(x => x.MaterialsOnArea);
        })

  .DataSource(d => d
  .Ajax()
  .ServerOperation(true)
  .PageSize(26)
  .Read(r => r.Action("GetHeatsInReception", "BilletYard"))
  //.Events(e => e.Change("dataSourceChange"))
  )
  .Events(e => e.Change("onSelectRecepcionSearchGridEl"))
)
