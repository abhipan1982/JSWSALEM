@model PE.HMIWWW.ViewModel.Module.Lite.Maintenance.VM_QuantityType

@{
    ViewBag.Title = "_IncidentAdd";
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

@using (Ajax.BeginForm("InsertQuantityType", "QuantityType", new AjaxOptions { UpdateTargetId = "formContainer", OnBegin = "OnFormBegin", OnSuccess = "OnFormSuccess", OnFailure = "OnFormError" }, new { @class = "container-fluid", id = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.HiddenFor(m => m.QuantityTypeId)*@

    <div class="row h-25 p-0 pt-3">
        <hr />
        <div class="col-12 p-0">
            <div class="container-fluid">

                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.QuantityTypeCode)
                    </div>
                    <div class="col">
                        @Html.Kendo().TextBoxFor(m => m.QuantityTypeCode)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.QuantityTypeName)
                    </div>
                    <div class="col">
                            @Html.Kendo().TextBoxFor(m => m.QuantityTypeName)
                    </div>
                </div>
                @*<div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.QuantityTypeDescription)
                    </div>
                    <div class="col">
                        @Html.Kendo().TextBoxFor(m => m.QuantityTypeDescription)
                    </div>
                </div>*@
            </div>
        </div>
    </div>
    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
                @VM_Resources.GLOB_Form_Button_Add
            </button>
        </div>
    </div>
}

