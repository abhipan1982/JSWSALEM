@model PE.HMIWWW.ViewModel.Module.Lite.Products.VM_Bundle
@{
  Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<form asp-controller="Products" asp-action="CreateBundle" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="container-fluid" target="formContainer" role="form" id="form">

  @Html.AntiForgeryToken()
  @Html.HiddenFor(x => x.WorkOrderId)

  <div class="row form-group">
    <div class="col text-right align-self-center">
      <label>@Html.LabelFor(x => x.Weight)</label>
    </div>
    <div class="col-9">
      @Html.PeKendo().NumericTextBoxFor(x => x.Weight).Min(0).HtmlAttributes(new {@class = "form-control form-control-sm"})
      @Html.ValidationMessageFor(x => x.Weight)
    </div>
  </div>

  <div class="row form-group">
    <div class="col text-right align-self-center">
      <label>@Html.LabelFor(x => x.BarsNumber)</label>
    </div>
    <div class="col-9">
      @Html.PeKendo().NumericTextBoxFor(x => x.BarsNumber).Min(0).HtmlAttributes(new {@class = "form-control form-control-sm"})
      @Html.ValidationMessageFor(x => x.BarsNumber)
    </div>
  </div>

  <div class="row form-group">
    <div class="col text-right align-self-center">
      <label>@Html.LabelFor(x => x.KeepInTracking)</label>
    </div>
    <div class="col-9">
      @Html.Kendo().CheckBoxFor(x => x.KeepInTracking).Label(string.Empty).HtmlAttributes(new {@class = "form-control form-control-sm"})
      @Html.ValidationMessageFor(x => x.KeepInTracking)
    </div>
  </div>

  <hr>

  <div class="row form-group">
    <div class="col invalid">
      <p id="error">
        <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
      </p>
    </div>
    <div class="col text-right">
      <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
        @VM_Resources.GLOB_Form_Button_Add
      </button>
    </div>
  </div>

</form>

<script>

  $(function () {

      $('#error').css("display", "none");
      $("#form").kendoValidator().data("kendoValidator");
  });

  function displayMessage() {
      var validator = $("#form").kendoValidator().data("kendoValidator");

      if (validator.validate()) {
          $('#error').css("display", "none");
      } else {
          $('#error').css("display", "block");
          $('#popup-footer')
              .css('display', 'block')
              .css('background-color', 'rgb(206, 0, 55)');
      }
  };

</script>

