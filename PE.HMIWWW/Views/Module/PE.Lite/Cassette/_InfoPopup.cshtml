@model PE.HMIWWW.ViewModel.Module.Lite.Cassette.VM_CassetteOverview

<div class="row h-100">
  <div class="col">
    @(Html.Kendo().TabStrip()
        .Name("CassetteInfo")
        .Animation(false)
        .HtmlAttributes(new { style = "width: 100%;" })
        .Scrollable(false)
        .Items(async tabstrip =>
        {
          tabstrip.Add().Text(VM_Resources.NAME_CassetteName)
            .Selected(true).Content((await @Html.PartialAsync("~/Views/Module/PE.Lite/Cassette/_Info.cshtml", Model)).ToHtmlString());
        })
      )
  </div>
</div>

