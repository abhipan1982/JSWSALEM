@model PE.HMIWWW.ViewModel.Module.Lite.Maintenance.VM_ComponentGroup

@{
    ViewBag.Title = "_ComponentGroupAdd";
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

@using (Ajax.BeginForm("InsertComponentGroup", "ComponentGroup", new AjaxOptions { UpdateTargetId = "formContainer", OnBegin = "OnFormBegin", OnSuccess = "OnFormSuccess", OnFailure = "OnFormError" }, new { @class = "container-fluid", id = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.HiddenFor(m => m.IncidentTypeId)*@

    <div class="row h-25 p-0 pt-3">
        <hr />
        <div class="col-12 p-0">
            <div class="container-fluid">

                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ComponentGroupCode)
                    </div>
                    <div class="col">
                        <div span id="incidentTypeCode">
                            @Html.Kendo().TextBoxFor(m => m.ComponentGroupCode)
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ComponentGroupName)
                    </div>
                    <div class="col">
                        <div span id="incidentTypeCode">
                            @Html.Kendo().TextBoxFor(m => m.ComponentGroupName)
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ComponentGroupDescription)
                    </div>
                    <div class="col">
                        @Html.Kendo().TextBoxFor(m => m.ComponentGroupDescription)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.FkParentComponentGroupId)
                    </div>
                    <div class="col">
                        @(Html.Kendo().DropDownListFor(x => x.FkParentComponentGroupId)
                             .Name("FkParentComponentGroupId")
                             .DataTextField("Text")
                             .DataValueField("Value")
                             .SelectedIndex(0)
                             .HtmlAttributes(new { @class = "form-control form-control-sm" })
                             .BindTo(new SelectList(@ViewBag.ComponentGroupsList.Items, "ComponentGroupId", "ComponentGroupName"))
                             .OptionLabel("-")
            )
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
                @VM_Resources.GLOB_Form_Button_Add
            </button>
        </div>
    </div>
}

