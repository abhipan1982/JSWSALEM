@model PE.HMIWWW.ViewModel.Module.Lite.QualityInspection.VM_QualityInspection

<hr />
<div class="mt-1 mb-1">
    <p class="quality-title">@VM_Resources.NAME_QualityInspection</p>
</div>

<div class="p-0 pt-3 row">

    <div class="col-3 p-0">
        <div class="container-fluid">
            <div class="form-group row">
                <div class="col-5 text-right">
                    @Html.LabelFor(m => m.DiameterMin)
                </div>
                <div class="col">
                    @Html.DisplayFor(m => m.DiameterMin)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 text-right">
                    @Html.LabelFor(m => m.DiameterMax)
                </div>
                <div class="col">
                    @Html.DisplayFor(m => m.DiameterMax)
                </div>
            </div>
        </div>
    </div>

    <div class="col-3 p-0">
        <div class="container-fluid">
            <div class="form-group row">
                <div class="col-4 text-right">
                    @Html.LabelFor(m => m.CrashTest)
                </div>
                <div class="col">
                    @if (!string.IsNullOrEmpty(Model.CrashTestImageSRC))
                    {
                        <img src='@Model.CrashTestImageSRC.BuildImageSrc()' ) />
                    }
                    @Html.DisplayFor(m => m.CrashTest)
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="form-group row">
                <div class="col-4 text-right">
                    @Html.LabelFor(m => m.VisualInspection)
                </div>
                <div class="col">
                    @Html.DisplayFor(m => m.VisualInspection)
                </div>
            </div>
        </div>
    </div>

    <div class="col-3 p-0">
        <div class="container-fluid">
            <div class="form-group row">
                <div class="col-4 text-right">
                    @Html.LabelFor(m => m.InspectionResult)
                </div>
                <div class="col">
                    @if (!string.IsNullOrEmpty(Model.InspectionResultImageSRC))
                    {
                        <img src='@Model.InspectionResultImageSRC.BuildImageSrc()' ) />
                    }
                    @Html.DisplayFor(m => m.InspectionResult)
                </div>
            </div>
        </div>
    </div>
</div>
