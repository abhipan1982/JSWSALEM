@using PE.HMIWWW.ViewModel.Module.Lite.Material
@(
        Html.Kendo().Grid<VM_MaterialOverview>()
            .Name("MaterialsList")
            .HtmlAttributes(new {style = "height: 650px;"})
            .NoRecords(n => n.Template(VM_Resources.GLOB_GRID_NO_DATA))
            .Sortable()
            .Filterable()
            .Selectable()
            .Scrollable()
            .Pageable(p => p
                .Messages(m => m.Display(VM_Resources.GLOB_pagination)))
            .Columns(c =>
            {
                c.Bound(x => x.MaterialName);
                c.Bound(x => x.MaterialId).Visible(false);
                c.Bound(x => x.MaterialWeight);
                c.Bound(x => x.WorkOrderName);
                c.Bound(x => x.IsAssigned);
                c.Bound(x => x.FKWorkOrderId).Visible(false);
                c.Bound(p => p.MaterialId).Sortable(false).Groupable(false).Filterable(false).Title(" ").Width(30)
                    .ClientTemplate(Html.ImageButton("details", "_Material.GoToMaterial(#:MaterialId#)").ToString());
            })
            .DataSource(d => d
                .Ajax()
                .ServerOperation(true)
                .PageSize(23)
                .Read(r => r.Action("GetMaterialsListByHeatId", "Heat", new {heatId = Model}))
            )
    )
