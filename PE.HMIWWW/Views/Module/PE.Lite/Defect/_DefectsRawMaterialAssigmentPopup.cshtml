@model PE.HMIWWW.ViewModel.Module.Lite.Defect.VM_QualityAssignment
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<style>
    #defectIds_taglist .k-button {
        width: 100px;
    }
</style>

<form asp-controller="RawMaterial" asp-action="AssignRawMaterialQuality" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="container-fluid" target="formContainer" role="form" id="form">

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="row form-group">
        <div class="col text-right align-self-center">
            <label>@Html.LabelFor(x => x.AssetId)</label>
        </div>
        <div class="col-9">
            @(Html.Kendo().DropDownListFor(x => x.AssetId)
            .DataTextField("Text")
            .DataValueField("Value")
            .HtmlAttributes(new {@class = "form-control form-control-sm"})
            .BindTo(new SelectList(ViewBag.AssetList, "AssetId", "AssetName"))
            .OptionLabel("-")
            )
        </div>
    </div>

    @*<div class="row form-group">
        <div class="col text-right align-self-center">
        <label>@Html.LabelFor(x => x.quality)</label>
        </div>
        <div class="col-9">
        @(Html.Kendo().DropDownListFor(x => x.quality)
        .Name("quality")
        .DataTextField("Text")
        .DataValueField("Value")
        .HtmlAttributes(new { @class = "form-control form-control-sm" })
        .BindTo((SelectList)ViewBag.QualityList)
        .OptionLabel("-")
        )

        @Html.ValidationMessageFor(x => x.quality)
        </div>
        </div>*@

    <div class="row form-group">
        <div class="col text-right align-self-center">
            <label>@Html.LabelFor(x => x.Remark)</label>
        </div>
        <div class="col-9">
            @Html.Kendo().TextBoxFor(x => x.Remark).HtmlAttributes(new { @class = "form-control form-control-sm" })

            @Html.ValidationMessageFor(x => x.Remark)
        </div>
    </div>

    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.DefectIds)</label>
        </div>
        <div class="col-9">

            @(Html.Kendo().MultiSelectFor(x => x.DefectIds)
            .Placeholder(VM_Resources.NAME_ClickToSelect)
            .DataTextField("Text")
            .DataValueField("Value")
            .ClearButton(true)
            .BindTo((MultiSelectList) ViewBag.Defects))

            @Html.ValidationMessageFor(x => x.DefectIds)
        </div>
    </div>

    <hr />


    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
                @VM_Resources.GLOB_Form_Button_Add
            </button>
        </div>
    </div>

</form>

<script>

    $(function () {

        $('#error').css("display", "none");
        $("#form").kendoValidator().data("kendoValidator");

    });

    function displayMessage() {

        var validator = $("#form").kendoValidator().data("kendoValidator");

        if (validator.validate()) {
            $('#error').css("display", "none");
        } else {
            $('#error').css("display", "block");
            $('#popup-footer')
                .css('display', 'block')
                .css('background-color', 'rgb(206, 0, 55)');
        }
    }

</script>
