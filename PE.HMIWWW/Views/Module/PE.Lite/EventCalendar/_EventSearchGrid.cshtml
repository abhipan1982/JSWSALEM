<style>
    .more {
        display: initial;
    }
</style>

@(
    Html.Kendo()
        .Grid<PE.HMIWWW.ViewModel.Module.Lite.Shift.VM_ShiftOverview>()
        .Name("SearchGrid")
        .NoRecords(x => x.Template(VM_Resources.GLOB_GRID_NO_DATA))
        .Pageable(p => p.Messages(m => m.Display(VM_Resources.GLOB_pagination)))
        .Sortable()
        .Filterable()
        .Selectable()
        .HtmlAttributes(new { style = "height: 735px;" })
        .Columns(columns =>
        {
            columns.Bound(c => c.ShiftId).Visible(false);
            columns.Bound(c => c.PlannedStartTime).Filterable(true).Sortable(true).Format(VM_Resources.ResourceManager.GetString("GLOB_LongDateTime_FORMAT"));
            columns.Bound(c => c.ShiftCode).Visible(true);
            columns.Bound(c => c.IsActualShift).Visible(true);
            columns.Bound(c => c.PlannedEndTime).Filterable(f => f.UI(GridFilterUIRole.DateTimePicker)).Hidden(true).Format(VM_Resources.ResourceManager.GetString("GLOB_LongDateTime_FORMAT")).HtmlAttributes(new {@class = "nowrap"});
            columns.Bound(c => c.StartTime).Filterable(f => f.UI(GridFilterUIRole.DateTimePicker)).Hidden(true).Format(VM_Resources.ResourceManager.GetString("GLOB_LongDateTime_FORMAT")).HtmlAttributes(new {@class = "nowrap"});
            columns.Bound(c => c.EndTime).Filterable(f => f.UI(GridFilterUIRole.DateTimePicker)).Hidden(true).Format(VM_Resources.ResourceManager.GetString("GLOB_LongDateTime_FORMAT")).HtmlAttributes(new {@class = "nowrap"});
        }).
        ToolBar(toolbar => toolbar.ClientTemplateId("SearchGridToolbarTemplate"))
       .DataSource(d => d
           .Ajax()
           .Sort(x => x.Add(y => y.PlannedStartTime).Descending())
           .ServerOperation(true)
           .PageSize(27)
           .Read(r => r.Action("GetShiftsList", "EventCalendar"))
       )
       .Events(e => e.Change("onElementSelect"))
)
