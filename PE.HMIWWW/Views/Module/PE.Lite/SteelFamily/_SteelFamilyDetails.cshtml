@model PE.HMIWWW.ViewModel.Module.Lite.SteelFamily.VM_SteelFamily
<style>
    .line {
        margin: 0 auto;
        width: 95%;
        height: 1px;
        background-color: rgba(0, 100, 135, 0.7);
    }
</style>

<div class="row p-0 pt-3">
  <div class="col-4 p-0">
    <div class="container-fluid">
      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.SteelGroupCode)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.SteelGroupCode)
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.WearCoefficient)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.WearCoefficient)
        </div>
      </div>
    </div>
  </div>
  <div class="col-4 p-0">
    <div class="container-fluid">

      <div class="form-group row">
        <div class="col-4 text-right">
          @Html.LabelFor(x => x.SteelGroupName)
        </div>
        <div class="col">
          @Html.DisplayFor(m => m.SteelGroupName)
        </div>
      </div>
    </div>
  </div>
  <div class="col-4 p-0">
    <div class="form-group row">
      <div class="col-4 text-right">
        @Html.LabelFor(x => x.Description)
      </div>
      <div class="col">
        @Html.DisplayFor(m => m.Description)
      </div>
    </div>
  </div>

</div>