@model PE.HMIWWW.ViewModel.Module.Lite.SteelFamily.VM_SteelFamily

<div class="row h-100">
    <div class="col">
        @(Html.Kendo().TabStrip()
            .Name("SteelFamilyBody")
            .Animation(false)
            .Scrollable(false)
            .Items(tabstrip =>
            {
                tabstrip.Add().Text(VM_Resources.NAME_SteelFamilyDetails)
                    .Selected(true).Content(Html.Partial("~/Views/Module/PE.Lite/SteelFamily/_SteelFamilyDetails.cshtml", Model).ToHtmlString()).ContentHtmlAttributes(new {@class = "partialHeight"});
            })
            .Events(e => { e.Select("saveTabStripState"); })
            )
    </div>
</div>