@model PE.HMIWWW.ViewModel.Module.Lite.SteelFamily.VM_SteelFamily
@{
    /**/

    ViewBag.Title = "_SteelFamilyEditPopup";
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<style>
    .textboxWidth {
        width: 100px;
    }

    .text-style {
        color: #00587c;
        font-weight: 500;
        font-size: 14px;
    }

    .container {
        padding: 0;
    }

    .form-group label {
        color: #00587c;
        font-size: 13px;
        margin-top: 2px;
    }

    .scrap-group {
        border-bottom: 1px solid #e6e6e6;
        padding-bottom: 5px;
        padding-right: 5px;
        /*width: 400px;*/
    }

    .scrap-group-name {
        font-size: 15px;
        font-weight: 500;
        color: #006487;
    }

    .scrap-group-code {
        font-size: 13px;
        line-height: 18px;
        color: #666;
    }

    .details-row {
        display: flex;
        flex-direction: row;
        margin: 0;
    }
</style>
<form asp-controller="SteelFamilyCatalogue" asp-action="UpdateSteelFamilyGroup" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="container-fluid" target="formContainer" role="form" id="form">
    @Html.AntiForgeryToken()
    <div style="height:auto;overflow-x:hidden">
        @Html.HiddenFor(x => x.Id)
        <div class="row form-group">
            <div class="col text-right">
                <label>@Html.LabelFor(x => x.SteelGroupCode)</label>
            </div>
            <div class="col">
                @Html.Kendo().TextBoxFor(x => x.SteelGroupCode).HtmlAttributes(new {@class = "form-control form-control-sm", style = "width: 150px", onchange = "checkSteelFamilyCodeValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + ");"})
                @Html.ValidationMessageFor(x => x.SteelGroupCode)
            </div>

            <div class="col text-right">
                <label>@Html.LabelFor(x => x.SteelGroupName)</label>
            </div>
            <div class="col">
                @Html.Kendo().TextBoxFor(x => x.SteelGroupName).HtmlAttributes(new {@class = "form-control form-control-sm", style = "width: 150px", onchange = "checkSteelFamilyNameValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + ");"})
                @Html.ValidationMessageFor(x => x.SteelGroupName)
            </div>

            <div class="col text-right">
                <label>@Html.LabelFor(x => x.Description)</label>
            </div>
            <div class="col">
                @Html.Kendo().TextBoxFor(x => x.Description).HtmlAttributes(new {@class = "form-control form-control-sm", style = "width: 150px"})
            </div>

        </div>

        <div class="row form-group">

          <div class="col text-right">
            <label>@Html.LabelFor(x => x.WearCoefficient)</label>
          </div>
          <div class="col">
            @Html.PeKendo().NumericTextBoxFor(x => x.WearCoefficient).HtmlAttributes(new { @class = "form-control form-control-sm", style = "width: 150px" })
            @Html.ValidationMessageFor(x => x.WearCoefficient)
          </div>
          <div class="col text-right">
            <label>@Html.LabelFor(x => x.IsDefault)</label>
          </div>
          <div class="col">
            @Html.Kendo().CheckBoxFor(x => x.IsDefault).HtmlAttributes(new { @class = "form-control" }).Label(string.Empty)
          </div>
          <div class="col">
          </div>
          <div class="col">
          </div>

        </div>

    </div>

    <hr>


    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
                @VM_Resources.GLOB_Form_Button_Update
            </button>
        </div>
    </div>

    <script>

        $(function () {

            $('#error').css("display", "none");
            $("#form").kendoValidator().data("kendoValidator");

        });

        function displayMessage() {

            var validator = $("#form").kendoValidator().data("kendoValidator");

            if (validator.validate()) {
                $('#error').css("display", "none");
            } else {
                $('#error').css("display", "block");
                $('#popup-footer')
                    .css('display', 'block')
                    .css('background-color', 'rgb(206, 0, 55)');
            }
        }
    </script>
</form>
