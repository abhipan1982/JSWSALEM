@model PE.HMIWWW.ViewModel.Module.Lite.Maintenance.VM_Component

@{
    ViewBag.Title = "_IncidentModify";
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

@using (Ajax.BeginForm("UpdateIncident", "Maintenance", new AjaxOptions { UpdateTargetId = "formContainer", OnBegin = "OnFormBegin", OnSuccess = "OnFormSuccess", OnFailure = "OnFormError" }, new { @class = "container-fluid", id = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ComponentId)

    <div class="row h-25 p-0 pt-3">
        <div class="col-12 p-0">
            <div class="container-fluid">
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ComponentCode)
                    </div>
                    <div class="col">
                        @Html.Kendo().TextBoxFor(m => m.ComponentCode)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ComponentName)
                    </div>
                    <div class="col">
                        <div span id="incidentTypeCode">
                            @Html.Kendo().TextBoxFor(m => m.ComponentName)
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.Description)
                    </div>
                    <div class="col">
                        <div span id="incidentTypeCode">
                            @Html.Kendo().TextBoxFor(m => m.Description)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row h-25 p-0 pt-3">
        <hr />
        <div class="col-12 p-0">
            <div class="container-fluid">
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.FkSupplierId)
                    </div>
                    <div class="col">
                        @(Html.Kendo().DropDownListFor(x => x.FkSupplierId)
                                             .Name("FkSupplierId")
                                             .DataTextField("Text")
                                             .DataValueField("Value")
                                             .HtmlAttributes(new { @class = "form-control form-control-sm" })
                                             .BindTo(new SelectList(@ViewBag.SuppliersList.Items, "SupplierId", "SupplierName"))
                                             .OptionLabel("-")
                                                
            )
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.FkComponentGroupId)
                    </div>
                    <div class="col">
                        @(Html.Kendo().DropDownListFor(x => x.FkComponentGroupId)
                                             .Name("FkComponentGroupId")
                                             .DataTextField("Text")
                                             .DataValueField("Value")
                                             .HtmlAttributes(new { @class = "form-control form-control-sm" })
                                             .BindTo(new SelectList(@ViewBag.ComponentGroupsList.Items, "ComponentGroupId", "ComponentGroupName"))
                                             .OptionLabel("-")
            )
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ComponentQuantity)
                    </div>
                    <div class="col">
                        <div span id="incidentTypeCode">
                            @Html.Kendo().TextBoxFor(m => m.ComponentQuantity)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
                @VM_Resources.GLOB_Form_Button_Update
            </button>
        </div>
    </div>
}

