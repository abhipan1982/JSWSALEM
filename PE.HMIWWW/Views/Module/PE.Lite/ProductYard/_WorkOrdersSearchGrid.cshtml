@using PE.HMIWWW.ViewModel.Module.Lite.ProductYard;
@(
  Html.Kendo()
      .Grid<VM_WorOrdersOnYards>()
      .Name("SearchGrid")
      .NoRecords(n => n.Template(VM_Resources.GLOB_GRID_NO_DATA))
      .Pageable(p => p
            .Refresh(true)
            .Messages(m => m.Display(VM_Resources.GLOB_pagination))
            .PageSizes(true))
      .Sortable()
      .Filterable()
      .Selectable()
      .HtmlAttributes(new { style = @String.Format("height:{0}px;", 746) })
      .Columns(columns =>
      {
        columns.Bound(c => c.HeatId).Visible(false);
        columns.Bound(c => c.YardId).Visible(false);
        columns.Bound(c => c.WorkOrderId).Visible(false);
        columns.Bound(c => c.WorkOrderName).Width(220);
        columns.Bound(c => c.YardName);
        columns.Bound(c => c.ProductsNumber);
        columns.Bound(c => c.HeatName).Width(220).Hidden(true);
        columns.Bound(c => c.HeatWeight).Hidden(true);
        columns.Bound(c => c.SteelgradeCode).Hidden(true);
      })
      .ToolBar(toolbar => toolbar.ClientTemplateId("SearchGridToolbarTemplate"))
      .DataSource(d => d
      .Ajax()
      .ServerOperation(true)
      .PageSize(26)
      .Read(r => r.Action("GetWorkOrdersOnYards", "ProductYard"))
      )
    .Events(e => e.Change("OnSearchGridElSelect"))
)
