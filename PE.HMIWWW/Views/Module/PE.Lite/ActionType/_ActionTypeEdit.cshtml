@model PE.HMIWWW.ViewModel.Module.Lite.Maintenance.VM_ActionType

@{
    ViewBag.Title = "_IncidentEdit";
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<form asp-controller="ActionType" asp-action="UpdateActionType" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="container-fluid" target="formContainer" role="form" id="form">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ActionTypeId)

    <div class="row h-25 p-0 pt-3">
        <hr/>
        <div class="col-12 p-0">
            <div class="container-fluid">

                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ActionTypeCode)
                    </div>
                    <div class="col">
                        @Html.Kendo().TextBoxFor(m => m.ActionTypeCode)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ActionTypeName)
                    </div>
                    <div class="col">
                        @Html.Kendo().TextBoxFor(m => m.ActionTypeName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        @Html.LabelFor(m => m.ActionTypeDescription)
                    </div>
                    <div class="col">
                        @Html.Kendo().TextBoxFor(m => m.ActionTypeDescription)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
                @VM_Resources.GLOB_Form_Button_Update
            </button>
        </div>
    </div>
</form>