@{
  Layout = "~/Views/Shared/_LayoutWithoutWidgets.cshtml";
}

<link rel="stylesheet" href="~/bundles/css/Module/DataAnalysis.css" />

@section module_menu
{<div class="row float-left" style="    margin-right: 5px;">
    @Html.ImageButton("data_analysis", "openChart()", false, "BUTTON_OpenChart")
    <div id="exportPDF" title="@VM_Resources.NAME_ExportTo PDF"><span class="k-icon k-i-pdf"></span></div>
    <div id="exportExcel" title="@VM_Resources.NAME_ExportTo Excel"><span class="k-icon k-i-excel"></span></div>
  </div>
}

<div id='configurator-expand' class='pivot-filters-btn'>
  <span onclick='filtersExpand()' id="conf-arrow" class="arrow k-icon k-i-arrow-60-right"></span> @VM_Resources.NAME_Configurator
</div>

@(Html.Kendo().PivotConfigurator()
    .Name("configurator")
    .Filterable(true)
    .Height(720)
)
@(Html.Kendo().PivotGrid<PE.HMIWWW.ViewModel.Module.Lite.DataAnalysis.VM_DataAnalysisWorkOrder>()
    .Name("pivotgrid")
    //.Sortable()
    .Excel(excel => excel
        .FileName("ProductionSummary.xlsx")
          .Filterable(true)
          .ProxyURL(Url.Action("Excel_Export_Save", "DataAnalysis")))
      .Pdf(pdf => pdf
          .FileName("ProductionSummary.pdf")
          .ProxyURL(Url.Action("Pdf_Export_Save", "DataAnalysis")))
        .Configurator("#configurator")
        .ColumnWidth(120)
        .Filterable(true)
        .Height(720)
      //.DataCellTemplateId("dataCellTemplateForNull")
      //.ColumnHeaderTemplateId("columnHeaderTemplateId")
      .DataSource(dataSource => dataSource
          .Ajax()
          .Transport(transport => transport.Read("GetWorkOrdersDataList", "DataAnalysis"))
          .Schema(schema => schema
          //.Model(model => {
          //    model.Field("Date", typeof(string)).From("Date");
          //})
              .Cube(cube => cube
                  .Dimensions(dimensions =>
                  {
                    //dimensions.Add(model => model.ProductThickness).Caption(VM_Resources.NAME_All + " " + VM_Resources.NAME_ProductsThicknesses);
                    dimensions.Add(model => model.ProductThickness).Caption(VM_Resources.NAME_ProductsThicknesses);
                    dimensions.Add(model => model.HeatName).Caption(VM_Resources.NAME_Heats);
                    dimensions.Add(model => model.Steelgrade).Caption(VM_Resources.NAME_Steelgrades);
                    dimensions.Add(model => model.ShiftCode).Caption(VM_Resources.NAME_Shifts);
                    dimensions.Add(model => model.Crew).Caption(VM_Resources.NAME_Crews);
                    //dimensions.Add(model => model.Day).Caption(VM_Resources.NAME_All + " " + VM_Resources.NAME_Days);
                    dimensions.Add(model => model.Date).Caption(VM_Resources.NAME_Days);
                    dimensions.Add(model => model.Week).Caption(VM_Resources.NAME_Weeks);
                    dimensions.Add(model => model.MonthNr).Caption(VM_Resources.NAME_Months);
                    dimensions.Add(model => model.Year).Caption(VM_Resources.NAME_Years);
                  })
              //.Measures(measures => measures.Add(VM_Resources.NAME_MaterialsWeight + '[' + VM_Resources.UNIT_Weight + ']').Field(model => model.MaterialsWeight).Aggregate("MaterialsWeight_DataSum").Result("MaterialWeight_Prec"))
              .Measures(measures => measures.Add(VM_Resources.NAME_MaterialsCount).Field(model => model.MaterialsCount).AggregateName("Sum"))
              .Measures(measures => measures.Add(VM_Resources.NAME_ProductsCount).Field(model => model.ProductsCount).AggregateName("Sum"))
              .Measures(measures => measures.Add(VM_Resources.NAME_MaterialsWeight + '[' + VM_Resources.UNIT_Weight + ']').Format(VM_Resources.FORMAT_Weight).Field(model => model.MaterialsWeight).AggregateName("Sum"))

              .Measures(measures => measures.Add(VM_Resources.NAME_ProductsWeight + '[' + VM_Resources.UNIT_Weight + ']').Format(VM_Resources.FORMAT_Weight).Field(model => model.ProductsWeight).AggregateName("Sum"))
              ))
          .Columns(columns =>
          {
            columns.Add("ProductThickness").Expand(true);
          })
          .Rows(rows =>
          {
            rows.Add("MonthNr").Expand(true);
          })
      .Measures(measures =>
      {
        measures.Values(VM_Resources.NAME_ProductsWeight + '[' + VM_Resources.UNIT_Weight + ']');
      })
      .Events(e => e.Change("function() { replaceColumnsNames(); }"))
    )
)

