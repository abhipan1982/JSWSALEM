@model PE.HMIWWW.ViewModel.Module.Lite.Material.VM_RawMaterialRejection
@{
  Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<form asp-controller="Visualization" asp-action="RejectRawMaterial" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="form-horizontal" target="formContainer" role="form" id="form">
  @Html.AntiForgeryToken()
  @Html.HiddenFor(x => x.RawMaterialId)

  <div class="row form-group">
    <div class="col text-right align-self-center">
      <label>@Html.LabelFor(x => x.EnumRejectLocation)</label>
    </div>
    <div class="col-7">
      @(Html.Kendo().DropDownListFor(x => x.EnumRejectLocation).BindTo((SelectList) ViewBag.RejectLocations).HtmlAttributes(new { @class = "form-control form-control-sm" }))
    </div>
  </div>

  <div class="row form-group">
    <div class="col text-right align-self-center">
      @Html.LabelFor(x => x.OutputPieces)
    </div>
    <div class="col-7">
      @Html.PeKendo().NumericTextBoxFor(x => x.OutputPieces).HtmlAttributes(new { @class = "form-control form-control-sm" }).Min(1).Max(32767).Value(1)
      @Html.ValidationMessageFor(x => x.OutputPieces)
    </div>
  </div>

  <hr />


  <div class="row form-group">
    <div class="col invalid">
      <p id="error">
        <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
      </p>
    </div>
    <div class="col text-right">
      <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
        @VM_Resources.GLOB_Form_Button_Add
      </button>
    </div>
  </div>
</form>

<script>

  $(function () {

    $('#error').css("display", "none");
    $("#form").kendoValidator().data("kendoValidator");

  });

  function displayMessage() {

    var validator = $("#form").kendoValidator().data("kendoValidator");

    if (validator.validate()) {
      $('#error').css("display", "none");
    } else {
      $('#error').css("display", "block");
      $('#popup-footer')
        .css('display', 'block')
        .css('background-color', 'rgb(206, 0, 55)');
    }
  }

</script>

