@{
  Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<form asp-controller="TrackingManagement" asp-action="ChargeMaterialOnFurnaceExit" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="form-horizontal" target="formContainer" role="form" id="form">
  @Html.AntiForgeryToken()

  <div class="row form-group">
    <div class="col text-right align-self-center">
      <label>@VM_Resources.NAME_WorkOrderName</label>
    </div>
    <div class="col-8">
        @Html.Hidden("WorkOrderId")

        @(Html.Kendo().AutoComplete()
            .HtmlAttributes(new { @style = "width: 244px;", @class = "workOrderList" })
            .Name("SelectedWorkOrderId")
            .Filter("contains")
            .DataTextField("WorkOrderName")
            .Placeholder(@VM_Resources.GLOB_StartTyping)
            .DataSource(source =>
            {
              source.Read(read =>
                {
                    read.Action("Filtering_WorkOrders", "TrackingManagement").Data(@<text>function onAdditionalData(e) {
                    return { text: $("#SelectedWorkOrderId").val()};
                } </text>);
              }).ServerFiltering(true);
            })
            .Events(events => events.Select("(e) => { onWorkOrderSelected(e) }"))
            .Template("<div class=''><span class='col-10 nowrap'>#: data.WorkOrderName #</span></div>")
      )
    </div>
  </div>

  <hr />

  <div class="row form-group">
    <div class="col invalid">
      <p id="error">
        <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
      </p>
    </div>
    <div class="col text-right">
      <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
        @VM_Resources.NAME_Charge
      </button>
    </div>
  </div>
</form>
<script>
  function onWorkOrderSelected(e) {
    $("[name='WorkOrderId']").val(e.dataItem.WorkOrderId);
  }
  $(function () {

    $('#error').css("display", "none");
    $("#form").kendoValidator().data("kendoValidator");

  });

  function displayMessage() {

    var validator = $("#form").kendoValidator().data("kendoValidator");

    if (validator.validate()) {
      $('#error').css("display", "none");
    } else {
      $('#error').css("display", "block");
      $('#popup-footer')
        .css('display', 'block')
        .css('background-color', 'rgb(206, 0, 55)');
    }
  }
</script>
