@model PE.HMIWWW.ViewModel.Module.Lite.TrackingManagement.VM_RemoveMaterial
@{
  Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<form asp-controller="TrackingManagement" asp-action="DeleteMaterial" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="form-horizontal" target="formContainer" role="form" id="form">
  @Html.AntiForgeryToken()
  @Html.HiddenFor(x => x.RawMaterialId)
  @Html.HiddenFor(x => x.AreaCode)

  <div class="row form-group">
    <div class="col text-right align-self-center">
      <label>@VM_Resources.NAME_Remove</label>
    </div>
    <div class="col-2">
      @(Html.Kendo().RadioButtonFor(model => model.HardRemove).Value(false))
    </div>
    <div class="col text-right align-self-center">
      <label>@VM_Resources.NAME_HardRemove</label>
    </div>
    <div class="col-2">
      @(Html.Kendo().RadioButtonFor(model => model.HardRemove).Value(true))
    </div>
  </div>

  <div class="row text-right form-group">
    <div class="col-6">
      <div class="col-12 k-text-align-justify alert alert-warning" style="min-height: 180px;">
        @VM_Resources.MESSAGE_RemoveFromTracking
      </div>
    </div>
    <div class="col-6">
      <div class="col-12 k-text-align-justify alert alert-danger" style="min-height: 180px;">
        @VM_Resources.MESSAGE_HardRemoveFromTracking
      </div>
    </div>
  </div>

  <hr />

  <div class="row form-group">
    <div class="col invalid">
      <p id="error">
        <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
      </p>
    </div>
    <div class="col text-right">
      <button class="btn btn-primary popup_button" onclick="displayMessage()" type="submit">
        @VM_Resources.BUTTON_item_remove
      </button>
    </div>
  </div>
</form>

<script>

  $(function () {

    $('#error').css("display", "none");
    $("#form").kendoValidator().data("kendoValidator");

  });

  function displayMessage() {

    var validator = $("#form").kendoValidator().data("kendoValidator");

    if (validator.validate()) {
      $('#error').css("display", "none");
    } else {
      $('#error').css("display", "block");
      $('#popup-footer')
        .css('display', 'block')
        .css('background-color', 'rgb(206, 0, 55)');
    }
  }

</script>


