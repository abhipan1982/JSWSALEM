@model PE.HMIWWW.ViewModel.Module.Lite.Defect.VM_DefectGroupsCatalogue
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<form asp-controller="DefectGroupsCatalogue" asp-action="UpdateDefectGroupsCatalogue" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnFormBegin" data-ajax-success="OnFormSuccess" data-ajax-failure="OnFormError"
      class="container-fluid" target="formContainer" role="form" id="form">

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.DefectGroupId)

    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.DefectGroupCode)</label>
        </div>
        <div class="col">
            @Html.Kendo().TextBoxFor(x => x.DefectGroupCode).HtmlAttributes(new {@class = "form-control form-control-sm", onchange = "checkDefectGroupCodeValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + ");"})
            @Html.ValidationMessageFor(x => x.DefectGroupCode)
        </div>
    </div>

    <div class="row form-group">
        <div class="col text-right">
            <label>@Html.LabelFor(x => x.DefectGroupName)</label>
        </div>
        <div class="col">
            @Html.Kendo().TextBoxFor(x => x.DefectGroupName).HtmlAttributes(new {@class = "form-control form-control-sm", onchange = "checkDefectGroupNameValidity(" + "\"" + VM_Resources.GLOB_NameExists + "\"" + ");"})
            @Html.ValidationMessageFor(x => x.DefectGroupName)
        </div>
    </div>


    <hr/>

    <div class="row form-group">
        <div class="col invalid">
            <p id="error">
                <span class="k-icon k-i-close-circle error-icon"></span> @VM_Resources.GLOB_Error
            </p>
        </div>
        <div class="col text-right">
            <button class="btn btn-primary popup_button" type="submit" onclick="displayMessage()">
                @VM_Resources.GLOB_Form_Button_Update
            </button>
        </div>
    </div>
</form>

<script>
    $(function () {

        $("#form").kendoValidator().data("kendoValidator");

    });

    function displayMessage() {

        var validator = $("#form").kendoValidator().data("kendoValidator");

        if (validator.validate()) {
            $('#error').css("display", "none");
        } else {
            $('#error').css("display", "block");
            $('#popup-footer')
                .css('display', 'block')
                .css('background-color', 'rgb(206, 0, 55)');
        }
    }
</script>